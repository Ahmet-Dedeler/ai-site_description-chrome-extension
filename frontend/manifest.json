{
    "manifest_version": 3,
    "name": "URL Description Teller",
    "description": "This extension will tell you the description of the URL you are currently on.",
    "version": "1.0",
    "permissions": [
        "activeTab"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    }

}